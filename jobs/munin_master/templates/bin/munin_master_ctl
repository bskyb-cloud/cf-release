#!/bin/bash

# exit immediately if a simple command exits with a non-zero status
set -e 

start_munin() {
    /var/vcap/jobs/munin_master/update_munin_conf.py
    cp /var/vcap/jobs/munin_master/etc/cron.d/munin /etc/cron.d/munin
    cp /var/vcap/jobs/munin_master/etc/cron.d/munin-config-updater /etc/cron.d/munin-config-updater
    chmod a+rwx /tmp

    service munin-node start \
      1>> "${INIT_LOG_DIR}/startup_stdout.log" \
      2>> "${INIT_LOG_DIR}/startup_stderr.log" \
      0<&-
}

stop_munin() {
    service munin-node stop \
      1>> "${INIT_LOG_DIR}/startup_stdout.log" \
      2>> "${INIT_LOG_DIR}/startup_stderr.log" \
      0<&-
}
case $1 in

  start)
    start_munin
    ;;
  stop)
    stop_munin
    ;;
  force-reload|reload|restart)
    start_munin
    stop_munin
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|reload|force-reload}" >&2
    exit 1
    ;;
esac

exit 0